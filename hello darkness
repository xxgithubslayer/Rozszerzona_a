    #include <iostream>
    #include <cstdlib>
    #include <windows.h>
    #include <fstream>
    #include <istream>
    using namespace std;

    string linia;
    int numerLinii = 1;
    string lhg;
    int main()

    {
        fstream plikTekst;
        plikTekst.open("tekst.txt",ios::in);
        if(plikTekst.good()==false)
        {
            exit(0);
        }
        int x=0;
        while(getline(plikTekst,lhg))
        {
            x++;
        }
        plikTekst.close();
        plikTekst.open("tekst.txt",ios::in);
        if(plikTekst.good()==false)
        {
            exit(0);
        }

        string tekst[x];
        while(getline(plikTekst,linia))
        {

                    tekst[numerLinii] = linia;
                    numerLinii++;


        }
        plikTekst.close();
        for(int i=0;i<x;i++)
        {
            cout<<tekst[i]<<endl;
            Sleep(15);
        }
    }
